{
    "name": "desktop-desktop-explorer",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/desktop/desktop-explorer/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx-electron:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/desktop/desktop-explorer",
                "main": "apps/desktop/desktop-explorer/src/main.ts",
                "tsConfig": "apps/desktop/desktop-explorer/tsconfig.app.json",
                "assets": ["apps/desktop/desktop-explorer/src/assets"]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/desktop/desktop-explorer/src/environments/environment.ts",
                            "with": "apps/desktop/desktop-explorer/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "nx-electron:execute",
            "options": {
                "buildTarget": "desktop-desktop-explorer:build"
            }
        },
        "package": {
            "executor": "nx-electron:package",
            "options": {
                "name": "desktop-desktop-explorer",
                "frontendProject": "explorer",
                "outputPath": "dist/packages",
                "prepackageOnly": true
            }
        },
        "make": {
            "executor": "nx-electron:make",
            "options": {
                "name": "desktop-desktop-explorer",
                "frontendProject": "explorer",
                "outputPath": "dist/executables"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/desktop/desktop-explorer/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/desktop/desktop-explorer/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
