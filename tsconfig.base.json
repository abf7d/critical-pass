{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@critical-pass/app-core": ["libs/app-core/src/index.ts"],
            "@critical-pass/charts": ["libs/charts/src/index.ts"],
            "@critical-pass/features/history": ["libs/features/history/src/index.ts"],
            "@critical-pass/features/network": ["libs/features/network/src/index.ts"],
            "@critical-pass/features/profile": ["libs/features/profile/src/index.ts"],
            "@critical-pass/features/resources": ["libs/features/resources/src/index.ts"],
            "@critical-pass/project/models": ["libs/project/models/src/index.ts"],
            "@critical-pass/project/processor": ["libs/project/processor/src/index.ts"],
            "@critical-pass/shared/components": ["libs/shared/components/src/index.ts"],
            "@critical-pass/shared/data-access": ["libs/shared/data-access/src/index.ts"],
            "@critical-pass/shared/environments": ["libs/shared/environments/src/index.ts"],
            "@critical-pass/shared/file-management": ["libs/shared/file-management/src/index.ts"],
            "@critical-pass/shared/project-utils": ["libs/shared/project-utils/src/index.ts"],
            "@critical-pass/shared/serializers": ["libs/shared/serializers/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
