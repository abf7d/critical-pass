{
    "name": "project-plan",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/project-plan/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/project-plan",
                "main": "libs/project-plan/src/index.ts",
                "tsConfig": "libs/project-plan/tsconfig.lib.json",
                "assets": ["libs/project-plan/*.md"]
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs project-plan {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/project-plan/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/project-plan/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
