{
    "name": "project-plan",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/project-plan/src",
    "prefix": "critical-pass",
    "targets": {
        "build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "libs/project-plan/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/project-plan/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/project-plan/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/project-plan/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/project-plan/**/*.ts", "libs/project-plan/**/*.html"]
            }
        }
    },
    "tags": []
}
